# Carbon Base Environment Configuration
# Copy this file to .env and update the values

# AWS Configuration
AWS_ACCOUNT_ID=123456789012
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Docker Image Configuration
IMAGE_TAG=latest
DOCKER_REGISTRY=${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com

# Jupyter Configuration
JUPYTER_TOKEN=your-secure-jupyter-token-here
JUPYTER_ENABLE_LAB=yes
JUPYTER_PORT=8888

# VS Code Server Configuration
VSCODE_PASSWORD=Carbon123#
VSCODE_PORT=9999

# User Configuration
DEFAULT_USER=carbon
DEFAULT_PASSWORD=Carbon123#
GRANT_SUDO=no

# Spark Configuration
SPARK_MASTER_URL=spark://localhost:7077
SPARK_WORKER_CORES=4
SPARK_WORKER_MEMORY=8g

# Database Configuration
POSTGRES_DB=carbondb
POSTGRES_USER=carbon
POSTGRES_PASSWORD=Carbon123#
POSTGRES_PORT=5432

REDIS_PASSWORD=
REDIS_PORT=6379

MONGODB_USER=carbon
MONGODB_PASSWORD=Carbon123#
MONGODB_PORT=27017

# Monitoring Configuration (optional)
GRAFANA_PASSWORD=your-secure-grafana-password
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# SSL Configuration (optional)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Logging Configuration
LOG_LEVEL=INFO
LOG_MAX_SIZE=100m
LOG_MAX_FILES=5

# Resource Limits
MEMORY_LIMIT=16g
CPU_LIMIT=8
GPU_COUNT=all

# Network Configuration
NETWORK_SUBNET=172.20.0.0/16

# Volume Paths
WORK_DIR=./work
DATA_DIR=./data
NOTEBOOKS_DIR=./notebooks
LOGS_DIR=./logs

# Timezone
TZ=UTC

# Security
JUPYTER_ALLOW_ROOT=false
DISABLE_AUTH=false

# Development/Debug
DEBUG=false
DEVELOPMENT_MODE=false

